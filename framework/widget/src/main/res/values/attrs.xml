<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="VoteProgress">
    <attr name="leftColor" format="color"></attr>
    <attr name="rightColor" format="color"></attr>
    <attr name="spaceColor" format="color"></attr>
    <attr name="spaceWidth" format="dimension"></attr>
  </declare-styleable>

  <declare-styleable name="LineProgress">
    <attr name="reachColor" format="color"></attr>
    <attr name="unReachColor" format="color"></attr>
    <attr name="round" format="boolean" />
  </declare-styleable>

  <!--针对圆角布局/ImageView的属性-->
  <attr name="round_as_circle" format="boolean" />
  <attr name="round_corner" format="dimension" />
  <attr name="round_corner_top_left" format="dimension" />
  <attr name="round_corner_top_right" format="dimension" />
  <attr name="round_corner_bottom_left" format="dimension" />
  <attr name="round_corner_bottom_right" format="dimension" />

  <!--真正用于解析的属性-->
  <declare-styleable name="RCAttrs">
    <attr name="round_as_circle" />
    <attr name="round_corner" />
    <attr name="round_corner_top_left" />
    <attr name="round_corner_top_right" />
    <attr name="round_corner_bottom_left" />
    <attr name="round_corner_bottom_right" />
  </declare-styleable>

  <!--用于在xml中提示用的-->
  <declare-styleable name="RCRelativeLayout">
    <attr name="round_corner" />
    <attr name="round_corner_top_left" />
    <attr name="round_corner_top_right" />
    <attr name="round_corner_bottom_left" />
    <attr name="round_corner_bottom_right" />
  </declare-styleable>


  <declare-styleable name="CardViewEx">
    <attr name="android_minWidth" format="dimension" />
    <attr name="android_minHeight" format="dimension" />
    <attr name="cardCornerRadius" format="dimension" />
    <attr name="cardElevation" format="dimension" />
    <attr name="cardMaxElevation" format="dimension" />
    <attr name="cardBackgroundColor" format="color" />
    <attr name="cardPreventCornerOverlap" format="boolean" />
    <attr name="cardUseCompatPadding" format="boolean" />
    <attr name="contentPadding" format="dimension" />
    <attr name="contentPaddingBottom" format="dimension" />
    <attr name="contentPaddingLeft" format="dimension" />
    <attr name="contentPaddingRight" format="dimension" />
    <attr name="contentPaddingTop" format="dimension" />
    <attr name="cardShadowStartColor" format="color" />
    <attr name="cardShadowEndColor" format="color" />
  </declare-styleable>

  <dimen name="default_corner_radius">4dp</dimen>
  <dimen name="default_shadow_radius">4dp</dimen>
  <color name="default_shadow_color">#88757575</color>
  <declare-styleable name="ShadowLayout">
    <attr name="sl_cornerRadius" format="dimension" />
    <attr name="sl_shadowRadius" format="dimension" />
    <attr name="sl_shadowColor" format="color" />
    <attr name="sl_dx" format="dimension" />
    <attr name="sl_dy" format="dimension" />
  </declare-styleable>

  <declare-styleable name="BoxShadowLayout">
    <attr name="box_shadowBlur" format="dimension" />
    <attr name="box_shadowColor" format="color" />
    <attr name="box_shadowDx" format="dimension" />
    <attr name="box_shadowDy" format="dimension" />
    <attr name="box_shadowRadius" format="dimension" />
    <attr name="box_shadowSpread" format="dimension" />
    <attr name="box_overlayColor" format="color" />
  </declare-styleable>

  <declare-styleable name="TextWithTagView">
    <attr name="tag_text" format="string" />
    <attr name="tag_textColor" format="color" />
    <attr name="tag_textSize" format="dimension" />
    <attr name="tag_tagColor" format="color" />
    <attr name="tag_tagSize" format="dimension" />
    <attr name="tag_maxLines" format="integer" />
    <attr name="tag_textSpace" format="dimension" />
    <attr name="tag_space" format="dimension" />
  </declare-styleable>

</resources>

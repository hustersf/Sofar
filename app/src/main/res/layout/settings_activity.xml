<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <View
      android:id="@+id/network_block"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="@drawable/setting_block_background"
      app:layout_constraintBottom_toBottomOf="@+id/switch_bar2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <com.sofar.widget.bar.SofaSwitchBar
      android:id="@+id/switch_bar1"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      app:layout_constraintEnd_toEndOf="@+id/network_block"
      app:layout_constraintStart_toStartOf="@+id/network_block"
      app:layout_constraintTop_toTopOf="@+id/network_block" />

    <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/background"
      app:layout_constraintBottom_toBottomOf="@+id/switch_bar1"
      app:layout_constraintEnd_toEndOf="@+id/network_block"
      app:layout_constraintStart_toStartOf="@+id/network_block" />

    <com.sofar.widget.bar.SofaSwitchBar
      android:id="@+id/switch_bar2"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      app:layout_constraintEnd_toEndOf="@+id/network_block"
      app:layout_constraintStart_toStartOf="@+id/network_block"
      app:layout_constraintTop_toBottomOf="@+id/switch_bar1" />

    <View
      android:id="@+id/reward_block"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/setting_block_background"
      app:layout_constraintBottom_toBottomOf="@+id/arrow_bar4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/network_block" />

    <com.sofar.widget.bar.SofaArrowBar
      android:id="@+id/arrow_bar1"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      app:layout_constraintEnd_toEndOf="@+id/reward_block"
      app:layout_constraintStart_toStartOf="@+id/reward_block"
      app:layout_constraintTop_toTopOf="@+id/reward_block" />

    <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/background"
      app:layout_constraintBottom_toBottomOf="@+id/arrow_bar1"
      app:layout_constraintEnd_toEndOf="@+id/reward_block"
      app:layout_constraintStart_toStartOf="@+id/reward_block" />

    <com.sofar.widget.bar.SofaArrowBar
      android:id="@+id/arrow_bar2"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      app:layout_constraintEnd_toEndOf="@+id/reward_block"
      app:layout_constraintStart_toStartOf="@+id/reward_block"
      app:layout_constraintTop_toBottomOf="@+id/arrow_bar1" />

    <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/background"
      app:layout_constraintBottom_toBottomOf="@+id/arrow_bar2"
      app:layout_constraintEnd_toEndOf="@+id/reward_block"
      app:layout_constraintStart_toStartOf="@+id/reward_block" />

    <com.sofar.widget.bar.SofaArrowBar
      android:id="@+id/arrow_bar3"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      app:layout_constraintEnd_toEndOf="@+id/reward_block"
      app:layout_constraintStart_toStartOf="@+id/reward_block"
      app:layout_constraintTop_toBottomOf="@+id/arrow_bar2" />

    <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/background"
      app:layout_constraintBottom_toBottomOf="@+id/arrow_bar3"
      app:layout_constraintEnd_toEndOf="@+id/reward_block"
      app:layout_constraintStart_toStartOf="@+id/reward_block" />

    <com.sofar.widget.bar.SofaArrowBar
      android:id="@+id/arrow_bar4"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      app:layout_constraintEnd_toEndOf="@+id/reward_block"
      app:layout_constraintStart_toStartOf="@+id/reward_block"
      app:layout_constraintTop_toBottomOf="@+id/arrow_bar3" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>